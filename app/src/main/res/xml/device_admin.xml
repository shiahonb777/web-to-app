<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- 强制锁定屏幕 -->
        <force-lock />
        <!-- 监视屏幕解锁尝试 -->
        <watch-login />
        <!-- 重置密码 -->
        <reset-password />
        <!-- 限制密码 -->
        <limit-password />
        <!-- 擦除数据（恢复出厂设置） -->
        <wipe-data />
        <!-- 设置密码过期时间 -->
        <expire-password />
        <!-- 加密存储 -->
        <encrypted-storage />
        <!-- 禁用相机 -->
        <disable-camera />
        <!-- 禁用锁屏小部件 -->
        <disable-keyguard-features />
    </uses-policies>
</device-admin>
